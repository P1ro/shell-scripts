# Test count-it alias
$ source tomohara-aliases.bash || true
$ echo "12 34 56 78" | count-it "\\d\\d" | wc -l
4


# Test copy-with-file-date alias
$ source tomohara-aliases.bash || true
$ FILENAME=$(echo $TMP/copy-test-"$$".txt)
$ touch $FILENAME
$ copy-with-file-date $FILENAME
$ ls ${FILENAME}.* | wc -l
1

